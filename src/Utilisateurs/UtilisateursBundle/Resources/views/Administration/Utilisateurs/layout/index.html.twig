{% extends 'baseAdmin.html.twig' %}

{% block body %}


    <script type="text/javascript" src="{{ asset('vendors/jquery/dist/jquery.min.js') }}"></script>

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">



                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">

                    <span class="input-group-btn">

                    </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel" >


                        <div class="x_title">
                            <h4>Tous les utilisateurs    <a class="data" href="{{ path('admin_users_new')}}" >Ajouter</a></h4>

                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">


                            <table id="datatable-buttons"  class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%" >
                                <thead>
                                <tr>
                                    <th>#</th>

                                    <th>Role</th>
                                    <th>Nom(DÃ©nomination sociale)</th>
                                    <th>Utilisateur</th>
                                    <th>Derniere connextion</th>
                                    <th>activation</th>
                                    <th>Action</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}


                                    <tr>
                                        <td>
                                            #{{ user.id }}

                                        </td>
                                        <td>
                                            {% if user.roles == ['ROLE_USER'] %}
                                                Client
                                            {% else %}
                                                Administrateur
                                            {% endif %}


                                        </td>
                                        <td>


                                        </td>
                                        <td> {{ user.email }}</td>



                                        <td>
                                            {{ user.lastLogin|date('d/m/Y H:i:s') }}
                                        </td>
                                        <td>

                                            {% if user.enabled == 1 %}
                                                <div class="etat">{{ user.enabled }}</div>
                                                <div class="">
                                                    <label>
                                                        <input type="checkbox" checked class="js-switch" disabled="disabled" value=" {{ user.id }}">
                                                    </label>
                                                </div>
                                            {% else %}
                                                <div class="off">
                                                    <label>
                                                        <input type="checkbox" class="js-switch s1" value=" {{ user.id }}">
                                                    </label>
                                                </div>
                                            {% endif %}
                                        </td>
                                        <td>



                                            <a href="{{ path('admin_users_show', { 'id': user.id }) }}" target="_blank" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> Voir </a>
                                            <a href="{{ path('admin_users_edit', { 'id': user.id }) }}" class="modif btn btn-info btn-xs"><i class="fa fa-pencil"></i> Editer </a>
                                            <a href="#" data-toggle="modal" data-target="#delete" id="{{ user.id }}" data-whatever="@mdo" class="modif btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Supprimer </a>

                                        </td>











                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>







                            <!-- price element -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}
