{% trans_default_domain 'FOSUserBundle' %}



<style>
    .login-wrapper .already {
        margin: 0 auto;
        float: none;
        text-align: center;
        font-size: 13px;
        margin-top: 30px;
    }
    .login-wrapper .already a {
        color: #222;
        margin-left: 7px;
        border-bottom: 1px solid;
        transition: all .1s linear;
        -moz-transition: all .1s linear;
        -webkit-transition: all .1s linear;
        -o-transition: all .1s linear;
    }
    .required label:after {
        color: #FF1200;
        content: " *";
        font-weight: bold;
    }
    .conditions p {
        color: #898a8c;
        font-size: 10px;
    }
    .login-wrapper .box .action {
        border-top: 1px solid #d3d7db;
        background-color: #f4f5f6;
        margin: 0px -36px;
        position: relative;
        top: 30px;
        border-radius: 0px 0px 7px 7px;
        padding: 15px 0px;
        text-align: center;
    }
    .login-wrapper .box .signup {
        text-transform: uppercase;
        font-size: 13px;
        padding: 7px 25px;
        border-radius: 5px;
    }
    .m-b-n-md {
        margin-bottom: -35px;
    }
    ul{
        list-style: none;
        padding-left: 0;
        padding-top: 5px;
        color: #FF1200;
    }
</style>
<div class="box">

    <div class="content-wrap" style="text-align: left;">
        {% if invalid_username is defined %}
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
        {% endif %}
        <h6 style="margin-bottom:10px">Réinitialiser le mot de passe</h6>

        <span class="help-block">Indiquer l'identifiant ou l'adresse email utilisé lors de l'inscription.</span>



        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div class="required">


                <label style="text-align:left;" class="oldie">Indiquer votre adresse email ou identifiant</label>
                <input type="text" id="username" name="username" required="required" class="form-control " placeholder="Indiquer votre adresse email ou identifiant" />
            </div>
            <div style="text-align: center;">

                <input type="submit" name="commit" value="Réinitialiser" class="btn-glow primary signup">

                </div>
                    <span class="help-block">Un email vous sera envoyé avec un lien vous permettant de choisir un nouveau mot de passe</span>


        </form>





    </div>
</div> <!-- content-wrap -->

<div class="already">

    <a href="{{ path('fos_user_security_login') }}">Revenir à la page 'Se connecter'</a>
</div>



