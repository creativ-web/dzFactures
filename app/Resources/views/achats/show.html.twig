{% extends 'base.html.twig' %}

{% block body %}
    <h1>Achat</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ achat.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if achat.dateentrer %}{{ achat.dateentrer|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ achat.prixHTachat }}</td>
            </tr>
            <tr>
                <th>Qte</th>
                <td>{{ achat.qte }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_achats_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_achats_edit', { 'id': achat.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
