

{% extends 'baseAdmin.html.twig' %}
{% block body %}
    <script type="text/javascript" src="{{ asset('vendors/jquery/dist/jquery.min.js') }}"></script>

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Commandes</h3>
                </div>


                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">

                    <span class="input-group-btn">

                    </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel" >






                        <div class="x_title">
                            <h4>Tous les Commandes    <a class="data" href="{{ path('admin_commandes_new')}}" >Ajouter</a></h4>

                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <table id="datatable-buttons"  class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%" >
                                <thead>
                                <tr>
                                    <th>#id</th>
                                    <th>Client</th>
                                    <th>Date</th>
                                    <th>Validation</th>
                                    <th>Action</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for commande in commandes %}


                                    <tr>
                                        <td>
                                            #{{ commande.id }}

                                        </td>
                                        <td>
                                            {{ commande.utilisateur.username }}

                                        </td>
                                        <td>
                                            {{ commande.date|date('d/m/Y H:i:s') }}

                                        </td>
                                        <td>
                                            {% if commande.valider == 1 %}
                                            <span>Confirmée</span>
                                            {% else %}
                                            <span> Non confirmée</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="" target="_blank" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> Voir</a>

                                            <a href="{{ path('admin_commandes_edit', { 'id': commande.id }) }}" class="modif btn btn-info btn-xs"><i class="fa fa-pencil"></i> Editer </a>

                                            <a href="#" data-toggle="modal" data-target="#delete" id="{{ commande.id }}" data-whatever="@mdo" class="modif btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Supprimer </a>

                                        </td>



                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}








