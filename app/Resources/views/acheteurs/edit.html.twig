                                    {{ form_label(edit_form.personne, "Personne à contacter") }}
                                    {{ form_widget(edit_form.personne,{'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(edit_form.personne) }}
                                </div>
                                <div class="col-sm-3">
                                    {{ form_label(edit_form.codeclient, "Réf/code client") }}
                                    {{ form_widget(edit_form.codeclient,{'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(edit_form.codeclient) }}
