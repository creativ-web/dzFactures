                                    {{ form_widget(edit_form.modereglement,{'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(edit_form.modereglement) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                    {{ form_label(edit_form.siteweb, "Site internet") }}
                                    {{ form_widget(edit_form.siteweb,{'attr': {'class': 'form-control'}}) }}
