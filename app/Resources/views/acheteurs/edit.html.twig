                            <div class="row">
                                <div class="col-sm-2">
                                    {{ form_label(edit_form.reduction, "Réduction par défaut (%)") }}
                                    {{ form_widget(edit_form.reduction,{'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(edit_form.reduction) }}
                                </div>
                                <div class="col-sm-2">
